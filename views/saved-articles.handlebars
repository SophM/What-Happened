<div class="container mt-3 text-center mx-auto">

    <div class="row">
        <div class="col">
            <h1 id="title" class="display-3">What happened?!</h1>
            <hr id="separator" />
            <a href="/" class="btn btn-lg p-1 btn-info ml-3">Go to home page</a>
        </div>
    </div>

    <div class="row mt-5 mb-5">
        {{#each data}}
            <div class="col">
                <div id="news-articles" class="card float-left m-2" style="width: 18rem;">
                    <div class="card-body">
                        <a class="card-link" href="https://www.nytimes.com{{url}}" target='_blank'><h5 class="card-title article-title">{{title}}</h5></a>
                        <p class="card-text">{{summary}}</p>
                        <button class="btn btn-danger delete-saved-article mb-5" data-id={{_id}}>Delete</button>
                        <button class="btn text-white note-button mb-5" data-id={{_id}}>Note</button>
                    </div>
                </div>
            </div>
        {{/each}} 
    </div>

    <div class="modal" id="modal-notes" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 id="header-note" class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="new-note"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>